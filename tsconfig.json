{
  "compilerOptions": {
    "target": "ES2020", // Define o target do código compilado.
    "module": "ESNext", // Usa o sistema de módulos ESNext para compatibilidade moderna.
    "moduleResolution": "Node", // Resolve módulos no estilo Node.js.
    "jsx": "react-jsx", // Transforma JSX no formato React 17+.
    "declaration": true, // Gera arquivos `.d.ts` para tipagem.
    "declarationMap": true, // Gera mapas para os arquivos de declaração.
    "sourceMap": true, // Inclui mapas de fonte para depuração.
    "outDir": "./dist", // Define a pasta de saída do código compilado.
    "strict": true, // Ativa verificações rigorosas do TypeScript.
    "esModuleInterop": true, // Permite compatibilidade com módulos CommonJS.
    "skipLibCheck": true, // Ignora a verificação de tipos em arquivos `.d.ts` de dependências.
    "forceConsistentCasingInFileNames": true, // Garante consistência no uso de maiúsculas/minúsculas.
    "resolveJsonModule": true, // Permite a importação de arquivos JSON.
    "isolatedModules": true, // Garante que cada arquivo seja tratado como um módulo independente.
    "allowSyntheticDefaultImports": true, // Permite imports padrão de módulos ES6.
    "emitDeclarationOnly": false, // Define se apenas declarações devem ser geradas.
    "removeComments": false, // Inclui comentários no código compilado.
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*" // Inclui todos os arquivos da pasta src.
  ],
  "exclude": [
    "node_modules", // Exclui a pasta node_modules.
    "dist", // Exclui a pasta de saída.
    "**/*.test.ts", // Exclui arquivos de teste.
    "**/*.stories.tsx" // Exclui arquivos de histórias do Storybook.
  ]
}
